{
  "name": "smart-dropzone-react",
  "version": "0.1.0",
  "description": "ðŸš€ A production-ready React dropzone component with smart defaults, drag & drop reordering, chunked uploads, resume functionality, and comprehensive provider support (Cloudinary, AWS S3, Supabase)",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./providers/*": {
      "types": "./dist/providers/*.d.ts",
      "import": "./dist/providers/*.js",
      "require": "./dist/providers/*.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js",
      "require": "./dist/components/*.js"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "import": "./dist/hooks/*.js",
      "require": "./dist/hooks/*.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && tsc && echo 'Build complete - dist folder created'",
    "build:full": "tsc --outDir dist --declaration",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:all": "pnpm run type-check && pnpm run test:coverage && pnpm run test:e2e",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepublishOnly": "pnpm run build",
    "prepack": "pnpm run build",
    "postpublish": "echo 'ðŸŽ‰ Package published successfully to npm!'"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react-dropzone": "^14.3.8",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.0.0 || ^19.0.0",
    "@types/react-dom": "^18.0.0 || ^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.5.0",
    "vitest": "^1.6.1"
  },
  "keywords": [
    "react",
    "dropzone",
    "file-upload",
    "upload",
    "drag-and-drop",
    "cloudinary",
    "aws-s3",
    "supabase",
    "typescript",
    "chunked-upload",
    "resume-upload",
    "file-preview",
    "accessibility",
    "i18n",
    "performance",
    "smart-defaults",
    "production-ready",
    "react-component",
    "ui-component"
  ],
  "author": "Tanflare Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harishkhojare/smart-dropzone.git"
  },
  "bugs": {
    "url": "https://github.com/harishkhojare/smart-dropzone/issues"
  },
  "homepage": "https://github.com/harishkhojare/smart-dropzone#readme"
}
